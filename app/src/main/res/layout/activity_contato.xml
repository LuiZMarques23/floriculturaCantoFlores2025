<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Contato.Contato">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarContato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Contato"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_voltar"
        android:background="@color/dark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/icCelular"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_contato"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarContato"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_celular"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarContato"
        app:layout_constraintStart_toEndOf="@id/icCelular"/>

    <ImageView
        android:id="@+id/icEmail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email_usuario"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/icCelular"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_email"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/icCelular"
        app:layout_constraintStart_toEndOf="@id/icEmail"/>

    <ImageView
        android:id="@+id/btWhatsApp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_whatsapp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>